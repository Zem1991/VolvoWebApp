@model VolvoWebApp.Dtos.VehicleCreateDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="ChassisSeries" class="control-label"></label>
                <input asp-for="ChassisSeries" class="form-control" />
                <span asp-validation-for="ChassisSeries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChassisNumber" class="control-label"></label>
                <input asp-for="ChassisNumber" class="form-control" />
                <span asp-validation-for="ChassisNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @{
                    var values = Enum.GetValues(typeof(VolvoWebApp.Enums.VehicleType)).Cast<VolvoWebApp.Enums.VehicleType>();
                    IEnumerable<SelectListItem> types =
                    from value in values
                    select new SelectListItem
                    {
                        Text = value.ToString(),
                        Value = value.ToString(),
                        // Selected = (value.Equals(VolvoWebApp.Enums.VehicleType.Truck))
                    };
                }
                @Html.DropDownList("Type", types)
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                @* <i class="fa-solid fa-check"></i> *@
                <input type="submit" value="Confirm" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
